{
    "name": "Wanderline Development Environment",
    "dockerComposeFile": "docker-compose.yml",
    "service": "wanderline-dev",
    "workspaceFolder": "/workspace",
    
    // VS Codeæ‹¡å¼µæ©Ÿèƒ½
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.flake8",
                "ms-python.black-formatter",
                "ms-toolsai.jupyter",
                "ms-python.isort",
                "ms-python.pylint",
                "charliermarsh.ruff",
                "ms-vscode.test-adapter-converter",
                "ms-python.pytest",
                "ms-vscode-remote.remote-containers"
            ],
            "settings": {
                "python.defaultInterpreterPath": "/opt/venv/bin/python",
                "python.linting.enabled": true,
                "python.linting.pylintEnabled": true,
                "python.formatting.provider": "black",
                "python.testing.pytestEnabled": true,
                "python.testing.unittestEnabled": false,
                "python.testing.pytestArgs": [
                    "tests"
                ]
            }
        }
    },
    
    // ã‚³ãƒ³ãƒ†ãƒŠä½œæˆå¾Œã«å®Ÿè¡Œã™ã‚‹ã‚³ãƒãƒ³ãƒ‰
    "postCreateCommand": "source /opt/ros/humble/setup.bash && echo 'ğŸ¤– Wanderline + ROS2 container ready! Try: cd robot && python3 demo_circle.py'",
    
    // ãƒãƒ¼ãƒˆã®è»¢é€
    "forwardPorts": [8888, 8000],
    "portsAttributes": {
        "8888": {
            "label": "Jupyter Notebook",
            "onAutoForward": "notify"
        },
        "8000": {
            "label": "Development Server",
            "onAutoForward": "ignore"
        }
    },
    
    // ã‚³ãƒ³ãƒ†ãƒŠã®ãƒ¦ãƒ¼ã‚¶ãƒ¼è¨­å®š
    "remoteUser": "root"
}
